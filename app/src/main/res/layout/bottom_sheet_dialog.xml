<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="276dp"
        android:id="@+id/ll_math">


        <ImageButton
            android:id="@+id/ib_close_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="170dp"
            android:src="@drawable/icons8_close_30"
            android:background="@drawable/icons8_close_30"/>


        <TextView
            android:id="@+id/tv_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="SOLVE TO VALIDATE"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/ll_math_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:divider="@drawable/divider"
            android:orientation="horizontal"
            android:padding="10dp"
            android:showDividers="middle">


            <TextView
                android:id="@+id/tv_random_number_one"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_numbers"
                android:text="7"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_random_math"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_numbers"
                android:text="*"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_random_number_two"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_numbers"
                android:text="8"
                android:textAlignment="center" />


        </LinearLayout>

        <EditText
            android:id="@+id/et_math_solve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_answer"
            android:text=""
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_validate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/reseda_green"
            android:textColor="@color/white"
            android:text="VALIDATE"
            tools:ignore="MissingConstraints" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>